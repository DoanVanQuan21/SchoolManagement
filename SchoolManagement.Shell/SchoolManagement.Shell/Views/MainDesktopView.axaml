<Window
    x:Class="SchoolManagement.Shell.Views.MainDesktopView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:notifiControls="clr-namespace:Avalonia.Notification.Controls;assembly=Notification.Avalonia"
    xmlns:views="clr-namespace:SchoolManagement.Shell.Views"
    xmlns:vm="using:SchoolManagement.Shell.ViewModels"
    Title="SchoolManagement.Shell"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:MainViewModel"
    Background="{DynamicResource DefaultBackgroundBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            ZIndex="100">
            <notifiControls:NotificationMessageContainer Manager="{Binding NotificationMessageManager}" />
        </Border>
        <ContentControl Grid.Row="0" Content="{Binding AppRegion.MainView}" />
    </Grid>
</Window>
